<div class="row">
  <% if (products && products.length > 0) {
    products.forEach((product, index) => { %>
      <div class="col-6 col-md-4 
        <% if (locals.showDesktop && index >= showDesktop) { %>hide-desktop<% } %>
        <% if (locals.showMobile && index >= showMobile) { %>hide-mobile<% } %>">
        <%- include('./product-item.ejs', { product, from: locals.from }) %>
      </div>
    <% })
  } else { %>
    <%= empty %>
  <% } %>
</div>