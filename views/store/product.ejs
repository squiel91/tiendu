<% 
  let price, compareAt, stock
  let varyingStock = false
  const variantData = {}
  if (product.hasVariants) {
    variantData.hasVariant = true
    if (variantIndex && parseInt(variantIndex) > 0 && parseInt(variantIndex) <= product.variants.length) {
      price = product.variants[variantIndex - 1].price
      compareAt = product.variants[variantIndex - 1].compareAt
      stock = product.variants[variantIndex - 1].stock
    } else {
      let maxPrice = product.variants[0].price
      let minPrice = maxPrice
      let comparteAt = product.variants[0].comparteAt
      let stock = product.variants[0].stock
      
      for (let variant of product.variants) {
        maxPrice = Math.max(maxPrice, variant.price)
        minPrice = Math.min(minPrice, variant.price)
        // in case the compare at is equal in all versionas, shows that
        if (comparteAt !== variant.comparteAt) {
          comparteAt = undefined
        }
        if (stock !== variant.stock) {
          varyingStock = true
        }
      }
      price = minPrice === maxPrice ? maxPrice : minPrice + '~' + maxPrice

      variantData.price = price,
      variantData.comparteAt = comparteAt,
      variantData.stock = stock,
      variantData.varyingStock = varyingStock
    }
  } else {
    price = product.price
    compareAt = product.compareAt
    stock = product.stock
  } 
%>
<script>
  var variantData = <%- JSON.stringify(variantData) %>;
</script>
