      <script>
        var product = <%- JSON.stringify(product) %>;

        var selectors = $('.variant-selectors select');

        // showing the cancel selection
        selectors.change(function (event) {
          if ($(event.target).val() && selectors.length > 1) {
            $(event.target).parent().find('.clear').show();
          } else {
            $(event.target).parent().find('.clear').hide();
          }

          var allSelected = true // used at the bottom of the method
          var optionsSelected = []; // array with all current selections
          validOptions = []; // array of dictionaries with the valid options to display
          for (var selectorIndex = 0; selectorIndex < selectors.length; selectorIndex++) {
            validOptions.push({}); // initialization
            if (selectors[selectorIndex].value) {
              optionsSelected.push(selectors[selectorIndex].value); // initialization
            } else {
              allSelected = false
              optionsSelected.push(undefined); // initialization
            }
          }

          // I fist iterate over the options, then over the variants and then ones again over the options
          for (var optionIndex = 0; optionIndex < optionsSelected.length; optionIndex++) {
            for (var variantIndex = 0; variantIndex < product.variants.length; variantIndex++) {
              var variant = product.variants[variantIndex];
              var candidateOption = variant.values[optionIndex];
              // if already included no need to test again
              if (!validOptions[optionIndex][candidateOption]) {
                var isCandidate = true;
                for (var innerOptionIndex = 0; innerOptionIndex < optionsSelected.length; innerOptionIndex++) {
                  if (innerOptionIndex != optionIndex && optionsSelected[innerOptionIndex] && optionsSelected[innerOptionIndex] !== variant.values[innerOptionIndex]) {
                    isCandidate = false;
                    break;
                  }
                }
                if (isCandidate) {
                  validOptions[optionIndex][candidateOption] = true;
                }
              }
            }
          }

          for (var selectorIndex = 0; selectorIndex < selectors.length; selectorIndex++) {
            var selector = selectors[selectorIndex]
            validOptionsForSelector = validOptions[selectorIndex]
            // skipping the first one that is the -- select one --
            for (var optionIndex = 1; optionIndex < selector.options.length; optionIndex++) {
              var option = selector.options[optionIndex]

              option.disabled = !validOptionsForSelector[option.value];
            }
          }

          if (allSelected) variantSelected(optionsSelected)
          else variantSelected()
        })

        function variantSelected(selection) {
          if (!selection) {
            variantId = undefined
            $('.price').text('$ ' + variantData.price);
            if (variantData.compareAt) {
              $('.compare-at').html('&nbsp;$ ' + variantData.compareAt + '&nbsp;');
            } else {
              $('.compare-at').empty();
            }
            var stockEl = $('.stock')
            if (variantData.varyingStock) {
              stockEl.text('Elije una variante para ver stock');
            } else {
              if (!stock && stock !== 0) {
                stockEl.text('Stock disponible');
              }
              if (stock === 0) {
                stockEl.text('Stock agotado');
              }
              if (stock === 1) {
                stockEl.text('Última unidad');
              }
              if (stock > 1) {
                stockEl.text('Solo quedan ' + stock + ' unidades');
              }
            }
          } else {
            var matchingVariant;
            for (var variantIndex = 0; variantIndex < product.variants.length; variantIndex++) {
              var variant = product.variants[variantIndex];
              var match = true
              for (var valueIndex = 0; valueIndex < variant.values.length; valueIndex++) {
                if (variant.values[valueIndex] !== selection[valueIndex]) {
                  match = false
                  break;
                }
              }
              if (match) {
                matchingVariant = product.variants[variantIndex]
                variantId = variantIndex + 1;
                break;
              }
            }
            $('.price').text('$ ' + matchingVariant.price)
            if (matchingVariant.compareAt) {
              $('.compare-at').html('&nbsp;$ ' + matchingVariant.compareAt + '&nbsp;')
            } else {
              $('.compare-at').empty()
            }
            var stock = matchingVariant.stock

            var stockEl = $('.stock')
            if (!stock && stock !== 0) {
              stockEl.text('Stock disponible')
            }
            if (stock === 0) {
              stockEl.text('Stock agotado')
              $('.add-to-cart').prop('disabled', true)
              $('.add-to-cart').text('Stock agotado')
            }
            if (stock === 1) {
              stockEl.text('Última unidad')
            }
            if (stock > 1) {
              stockEl.text('Solo quedan ' + stock + ' unidades')
            }
            maxStock = stock;

            var thumbElements = $('.thumbnailImage')
            for (var thumbIndex = 0; thumbIndex < thumbElements.length; thumbIndex++) {
              var thumbEl = $(thumbElements[thumbIndex])
              if (thumbEl.data('variants') && thumbEl.data('variants').toString().split(',').map(literal => parseInt(literal)).includes(variantId)) {
                $('.currentImage').css('background-image',  'url(\'' + thumbEl.data('image') +'\')')
                break;
              }
            }
            $('.add-to-cart').prop('disabled', false);
            $('.add-to-cart').text('Agregar al carrito');
          }
        }
      </script>
